{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Mon Compte</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <tr><th>N° Client</th><td>{{ user.getId() }}</td></tr>
                    <tr><th>Nom</th><td>{{ user.getNom() }}</td></tr>
                    <tr><th>Prénom</th><td>{{ user.getPrenom() }}</td></tr>
                    <tr><th>Email</th><td>{{ user.getEmail() }}</td></tr>
                    <tr><th>Activité</th>
                        <td>
                            <a class="btn btn-primary" href="{{ path('usager_orders') }}">
                                <span class="badge badge-light">{{ user.getNbCommandes() }}</span> Commande(s)
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
