{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <!-- debut du block body -->
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Mes Commandes</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Date</th>
                        <th>Statut</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in commandes %}
                        <tr class="text-danger" style='font-weight: bold;'>
                            <td>{{ item.getId() }}</td>
                            <td>{{ item.getDateCommande()|date('d-m-Y') }}</td>
                            <td>
                                <i class="fas fa-hourglass-half" data-toggle="tooltip" title="validation en Attente" data-placement="right"></i>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- fin du block body -->
{% endblock %}
