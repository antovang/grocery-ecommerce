{% extends "base.html.twig" %}
        {% block title %}
            {{ title }}
        {% endblock %}

            {% block body %}
                <div class="card col-md-12">
                    <div class="card-header">
                        <h1><i class="fas fa-store"></i> {{ 'default.navbar.boutique' | trans}} : {{ categories | length }} {{ 'default.categorie.titre' | trans}}</h1>
                    </div>
                    <div class="card-body row">
                        {% for item in categories %}
                            <div class="col-md-4">
                                <div class="card clickable" onclick="location.href='{{ path('rayon',{'idCategorie':item.id}) }}'" >
                                    <img src="{{ asset(item.visuel) }}" class="card-img-top" alt="{{ item.libelle }}">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ item.libelle }}</h4>
                                        <p class="card-text"><i>{{ item.texte }}</i></p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
        {% endblock %}