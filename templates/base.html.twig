                <link href="{{ asset('css/projet.css') }}" rel="stylesheet" type="text/css">
            {% endblock %}
        </head>
        <body>
            <header>
                {% include "navbar.html.twig" %}
            </header>
            <main role="main" class="container-fluid" >
                <div class="row">
                    <div class="col-md-10">
                        <div class="main-div">
                            <!-- debut du block body -->
                            {% block body %}

                            {% endblock %}
                            <!-- fin du block body -->
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-header text-center">
                                <h4><i class="fas fa-star"></i> Top Ventes</h4>
                            </div>
                            <div class="card-body">
                                <!-- debut du block aside -->
                                {% block aside %}

                                {% endblock %}
                                <!-- fin du block aside -->
                            </div>
                        </div>
                    </div>
                </div>
            </main>

        {% block javascripts %}
            <script src="https://kit.fontawesome.com/ec1e8b993a.js" crossorigin="anonymous"></script>
