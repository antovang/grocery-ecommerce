{% extends 'base.html.twig' %}

{% block title %}Identification{% endblock %}

{% block body %}
    <!-- debut du block body -->
    <div class="row small">
        <div class="card col-md-4 offset-1">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Déjà Membre : Connexion</h3>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('login') }}">
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="" name="email" id="inputEmail" class="form-control" required
                               autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Mot de Passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    </div>
                    <div class="col-md-12 btn-group" style="padding:20px">
                        <button class="btn btn-primary" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- fin du block body -->
{% endblock %}
